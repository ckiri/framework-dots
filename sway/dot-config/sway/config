# SWAY config
# Variables
# Mod1 = Alt, Mod4 = Win
set $mod Mod1
set $wmod Mod4
set $left h
set $down j
set $up k
set $right l
# Note: pass the final command to swaymsg so that the resulting window can be
# opened on the original workspace that the command was run on.
set $menu wmenu-run -l 25 | xargs swaymsg exec --
# Break up output power management commands for a more readable config
set $opm_dim 'brightnessctl --save && brightnessctl set 1%'
set $opm_restore 'brightnessctl --restore'
set $opm_off 'swaymsg "output * power off"' 
set $opm_on 'swaymsg "output * power on"'
# Autostart apps
# Idle configuration
exec swayidle -w \
    timeout 900 $opm_dim resume $opm_restore \
    timeout 1200 'swaylock -f' \
    timeout 1260 $opm_off resume $opm_on \
    timeout 1800 'systemctl suspend-then-hibernate' \
    before-sleep 'swaylock -f' >/dev/null 2>&1
# Start Gromit-MPX
exec gromit-mpx >/dev/null 2>&1
# Set GTK and icon theme
exec dconf write /org/gnome/desktop/interface/color-scheme '"prefer-light"'
exec gsettings set org.gnome.desktop.interface gtk-theme 'Adwaita'
exec gsettings set org.gnome.desktop.interface icon-theme 'Papirus-Light'
# Output configuration
exec kanshi >/dev/null 2>&1
# Enable eyesafing mode, -l = location, -t = temperature 
exec gammastep -l 49.0:9.2 -t 5700:3600 >/dev/null 2>&1
# DBus activation (Needed for keyring callbacks)
exec dbus-update-activation-environment \
    --systemd WAYLAND_DISPLAY XDG_CURRENT_DESKTOP >/dev/null 2>&1
# Key bindings
# Start a terminal
bindsym $mod+Shift+Return exec $TERMINAL
# Kill focused window
bindsym $mod+Shift+c kill
# Start wmenu
bindsym $mod+p exec $menu
# Reload the configuration file
bindsym $mod+Shift+r reload
# Exit sway (logs you out of your Wayland session)
bindsym $mod+Shift+q exec swaynag -t \
    warning -m \
    'Are you sure to exit?' \
    -B 'Yes, exit sway' 'swaymsg exit'
# Lock the sway session
bindsym $wmod+l exec swaylock -f
# Start browser
bindsym $mod+w exec $BROWSER
# Control Gromit-MPX
bindsym F9 exec gromit-mpx --toggle --clear
bindsym F9+Shift exec gromit-mpx --toggle
# Take a screenshot with the print key, like it should supposed to be
bindsym Print exec ~/.local/bin/wayshot.sh
# In case of crappy keyboards that don't have a print key:
bindsym $wmod+Shift+s exec ~/.local/bin/wayshot.sh
# Change output configuration
bindsym $mod+Shift+p exec ~/.local/bin/outputprofile.sh
# Control monitor brigthness
bindsym XF86MonBrightnessUp exec brightnessctl --exponent=5 set +5%
bindsym XF86MonBrightnessDown exec brightnessctl --exponent=5 set 5%-
# Control audio
bindsym XF86AudioRaiseVolume exec wpctl set-volume @DEFAULT_AUDIO_SINK@ 0.1+
bindsym XF86AudioLowerVolume exec wpctl set-volume @DEFAULT_AUDIO_SINK@ 0.1-
bindsym XF86AudioMute exec set-mute @DEFAULT_AUDIO_SINK@ toggle
# Moving around:
# Move your focus around
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right
# Move the focused window with the same, but add Shift
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right
# Workspaces:
# Switch to workspace
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 10
bindsym $mod+Tab workspace next
# Enable 3-finger swipe for changing workspaces
bindgesture swipe:right workspace prev
bindgesture swipe:left workspace next
# Move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6
bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8
bindsym $mod+Shift+9 move container to workspace number 9
bindsym $mod+Shift+0 move container to workspace number 10
# Window rules
for_window [app_id="Minimal EGit"] floating enable
for_window [instance="pinentry-gtk"] floating enable
for_window [app_id="org.pulseaudio.pavucontrol"] floating enable
for_window [app_id="blueman-manager"] floating enable
# Layout:
# "split" the current object of focus with
# $mod+b or $mod+v, for horizontal and vertical splits
bindsym $mod+b splith
bindsym $mod+v splitv
# Switch the current container between different layout styles
bindsym $mod+s layout stacking
bindsym $mod+t layout tabbed
bindsym $mod+e layout toggle [split|tabbed|stacking|splitv|splith]
# Make the current focus fullscreen
bindsym $mod+Shift+f fullscreen
# Toggle the current focus between tiling and floating mode
bindsym $mod+Shift+space floating toggle
# Swap focus between the tiling area and the floating area
bindsym $mod+space focus mode_toggle
# Move focus to the parent container
bindsym $mod+a focus parent
# Move the currently focused window to the scratchpad
bindsym $mod+Shift+minus move scratchpad
# Show the next scratchpad window or hide the focused scratchpad window.
# If there are multiple scratchpad windows, this command cycles through them.
bindsym $mod+minus scratchpad show
# Idle Inhibitor
bindsym $mod+i inhibit_idle visible
bindsym $mod+Shift+i inhibit_idle none
# Resizing containers:
bindsym $mod+r mode "resize"
mode "resize" {
    bindsym $left resize shrink width 10px
    bindsym $down resize grow height 10px
    bindsym $up resize shrink height 10px
    bindsym $right resize grow width 10px
    # Return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
# "Style" sway windows:
font sans-serif 11
titlebar_border_thickness 1
titlebar_padding 4 4
# Status Bar:
# Read `man 5 sway-bar` for more information about this section.
bar {
    font sans-serif 11
    position bottom
    height 0
    # When the status_command prints a new line to stdout, swaybar updates.
    # The default just shows the current date and time.
    status_command while true; do ~/.local/bin/status.sh; sleep 60; done
    colors {
        statusline #ffffff
        background #323232
        inactive_workspace #000000 #000000 #5c5c5c
    }
}
# Configure input devices: 
# Get names of inputs: swaymsg -t get_inputs
input "1452:592:Keychron_K4_Keychron_K4" {
    xkb_layout de
    xkb_options caps:escape
}
input "2362:628:PIXA3854:00_093A:0274_Touchpad" {
    dwt enabled
    #tap enabled
    natural_scroll enabled
    middle_emulation enabled
    accel_profile "flat"
    pointer_accel 0
    tap_button_map "lrm"
}
# Configure outputs:
output eDP-1 {
    resolution 2256x1504@59.999001Hz
    scale 1.5
    scale_filter nearest
    position 0 0
		background #000000
}
output "AOC 27B3CF2 AUEQ29A002606" enable {
    mode 1920x1080@100.000000Hz
    adaptive_sync on
    render_bit_depth 8
    position 3840 0
		background #000000
}
# Set XDG_CURRENT_DESKTOP
include /etc/sway/config.d/*
